{
  "type": "object",
  "required": ["project_frame", "concept_map", "planning_data", "doc_outline", "doc_type"],
  "properties": {
    "doc_type": {
      "type": "string",
      "description": "Key identifying which document to generate (e.g. 'project_brief', 'scope_boundaries')."
    },
    "project_frame": {
      "type": "object",
      "description": "Normalized core description of the project.",
      "properties": {
        "name": { "type": "string" },
        "problem": { "type": "string" },
        "opportunity": { "type": "string" },
        "goals": { "type": "array", "items": { "type": "string" } },
        "stakeholders": { "type": "array", "items": { "type": "string" } },
        "constraints": { "type": "array", "items": { "type": "string" } },
        "timeline_summary": { "type": "string" },
        "domain_tags": { "type": "array", "items": { "type": "string" } }
      }
    },
    "concept_map": {
      "type": "object",
      "description": "Expanded conceptual understanding from Model A.",
      "properties": {
        "context_notes": { "type": "string" },
        "key_challenges": { "type": "array", "items": { "type": "string" } },
        "key_opportunities": { "type": "array", "items": { "type": "string" } },
        "implicit_needs": { "type": "array", "items": { "type": "string" } }
      }
    },
    "planning_data": {
      "type": "object",
      "description": "Structured planning objects generated by Model A.",
      "properties": {
        "goals_model": {
          "type": "object",
          "properties": {
            "goals": { "type": "array", "items": { "type": "string" } },
            "objectives": { "type": "array", "items": { "type": "string" } },
            "activities": { "type": "array", "items": { "type": "string" } }
          }
        },
        "scope_model": {
          "type": "object",
          "properties": {
            "in_scope": { "type": "array", "items": { "type": "string" } },
            "out_of_scope": { "type": "array", "items": { "type": "string" } },
            "dependencies": { "type": "array", "items": { "type": "string" } }
          }
        },
        "risk_model": {
          "type": "array",
          "description": "Each item is a risk object.",
          "items": {
            "type": "object",
            "properties": {
              "risk": { "type": "string" },
              "likelihood": { "type": "string" },
              "impact": { "type": "string" },
              "mitigation": { "type": "string" }
            }
          }
        },
        "stakeholder_model": {
          "type": "array",
          "description": "Stakeholder roles and attributes.",
          "items": {
            "type": "object",
            "properties": {
              "role": { "type": "string" },
              "description": { "type": "string" },
              "interests": { "type": "string" },
              "influence": { "type": "string" }
            }
          }
        },
        "budget_model": {
          "type": "array",
          "description": "High-level budget categories and drivers.",
          "items": {
            "type": "object",
            "properties": {
              "category": { "type": "string" },
              "description": { "type": "string" },
              "priority": { "type": "string" }
            }
          }
        },
        "timeline_model": {
          "type": "array",
          "description": "High-level phases and milestones.",
          "items": {
            "type": "object",
            "properties": {
              "phase_name": { "type": "string" },
              "approx_timing": { "type": "string" },
              "key_milestones": { "type": "array", "items": { "type": "string" } }
            }
          }
        },
        "operating_model": {
          "type": "object",
          "description": "Optional; roles + RACI-ish info.",
          "properties": {
            "roles": { "type": "array", "items": { "type": "string" } },
            "notes": { "type": "string" }
          }
        }
      }
    },
    "doc_outline": {
      "type": "object",
      "description": "Section structure for this specific document.",
      "properties": {
        "title": { "type": "string" },
        "sections": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "heading": { "type": "string" },
              "key_points": {
                "type": "array",
                "items": { "type": "string" }
              }
            },
            "required": ["heading"]
          }
        }
      },
      "required": ["sections"]
    },
    "previous_docs_summary": {
      "type": "string",
      "description": "Optional: short text summarizing any documents already generated (to keep tone/assumptions consistent)."
    }
  }
}